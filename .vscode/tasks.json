{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "CudaDemos.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/m"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "CudaDemos.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64",
                "/m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "CudaDemos.sln",
                "/t:Clean",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "problemMatcher": []
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "CudaDemos.sln",
                "/t:Rebuild",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}
